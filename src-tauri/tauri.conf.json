{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Tissaia AI",
  "version": "3.0.0",
  "identifier": "com.tissaia.ai",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5175",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Tissaia AI Studio",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data: blob:; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://generativelanguage.googleapis.com https://api.anthropic.com https://api.openai.com https://api.mistral.ai"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": true
      }
    },
    "category": "Photography",
    "shortDescription": "AI-powered photo restoration",
    "longDescription": "Tissaia AI Studio - Professional photo restoration using artificial intelligence. Analyze damage, restore old photos, and preserve memories.",
    "copyright": "© 2025 Paweł Serkowski",
    "publisher": "Tissaia"
  }
}
